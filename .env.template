# Trading AI System Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================
# ALPACA TRADING API CREDENTIALS
# ============================================
# Get your API keys from: https://app.alpaca.markets/
# Paper Trading Keys (recommended for testing)
ALPACA_API_KEY=your_paper_trading_api_key_here
ALPACA_SECRET_KEY=your_paper_trading_secret_key_here

# Live Trading Keys (use with caution!)
# ALPACA_LIVE_API_KEY=your_live_trading_api_key_here
# ALPACA_LIVE_SECRET_KEY=your_live_trading_secret_key_here

# ============================================
# TRADING SYSTEM SETTINGS
# ============================================
# Trading mode: paper, live, or mock
TRADING_MODE=paper

# Default portfolio settings
INITIAL_CAPITAL=10000
MAX_POSITION_SIZE=0.10
MAX_PORTFOLIO_EXPOSURE=0.80
MAX_DAILY_LOSS=0.05
MIN_SIGNAL_CONFIDENCE=0.60

# Risk management
STOP_LOSS_PCT=0.08
TAKE_PROFIT_PCT=0.15
MAX_POSITIONS=20

# ============================================
# DATA SOURCES
# ============================================
# Default tickers to trade (comma-separated)
DEFAULT_TICKERS=AAPL,MSFT,SPY,QQQ,NVDA

# Signal check interval (seconds)
SIGNAL_CHECK_INTERVAL=300

# ============================================
# LOGGING AND STORAGE
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Paths for data storage
LOGS_PATH=./logs/
DATA_PATH=./data/
MODELS_PATH=./models/
SIGNALS_PATH=./signals/

# ============================================
# LEGACY SETTINGS (Optional)
# ============================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
IB_API_KEY=your_interactive_brokers_key_here

# Database (if using full profile)
DATABASE_URL=postgresql://trader:secure_password@postgres:5432/trading_ai
REDIS_URL=redis://redis:6379/0

# Environment
ENVIRONMENT=development
DEBUG=true

# ============================================
# FUTURE CRYPTO SETTINGS (Phase 3+)
# ============================================
# Binance API (for future crypto trading)
# BINANCE_API_KEY=your_binance_api_key_here
# BINANCE_SECRET_KEY=your_binance_secret_key_here

# Ethereum settings
# ETH_RPC_URL=https://mainnet.infura.io/v3/your_project_id
# ETH_PRIVATE_KEY=your_ethereum_private_key_here

# BSC settings  
# BSC_RPC_URL=https://bsc-dataseed.binance.org/
# BSC_PRIVATE_KEY=your_bsc_private_key_here

# Trading settings
PAPER_TRADING=true
MAX_POSITION_SIZE=0.1
RISK_TOLERANCE=moderate
