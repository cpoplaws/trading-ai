# Trading AI Environment Variables
# Copy this file to .env and fill in your API keys

# ===== BROKER API KEYS =====

# Alpaca Trading (https://alpaca.markets)
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading by default

# Interactive Brokers (Future)
IB_API_KEY=your_interactive_brokers_key_here

# ===== CRYPTO EXCHANGES =====

# Binance (https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Deribit Options (https://www.deribit.com/)
DERIBIT_API_KEY=your_deribit_api_key_here
DERIBIT_SECRET_KEY=your_deribit_secret_key_here

# ===== DATA SOURCES =====

# Alpha Vantage (https://www.alphavantage.co)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# NewsAPI (https://newsapi.org) - Phase 3
NEWSAPI_API_KEY=your_newsapi_key_here

# Reddit API (https://www.reddit.com/prefs/apps) - Phase 3
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=TradingAI/1.0

# ===== CRYPTO DATA PROVIDERS =====

# CoinGecko Pro (https://www.coingecko.com/en/api/pricing)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Dune Analytics (https://dune.com/settings/api)
DUNE_API_KEY=your_dune_api_key_here

# The Graph (https://thegraph.com/studio/apikeys/)
THE_GRAPH_API_KEY=your_thegraph_api_key_here

# Glassnode (https://studio.glassnode.com/settings/api)
GLASSNODE_API_KEY=your_glassnode_api_key_here

# Nansen (https://www.nansen.ai/)
NANSEN_API_KEY=your_nansen_api_key_here

# ===== BLOCKCHAIN RPCs =====

# Alchemy (https://www.alchemy.com/)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura (https://infura.io/)
INFURA_API_KEY=your_infura_api_key_here

# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETH_PRIVATE_KEY=your_ethereum_wallet_private_key_here

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY

# Base
BASE_RPC_URL=https://mainnet.base.org

# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=your_solana_wallet_private_key_here

# BSC
BSC_PRIVATE_KEY=your_bsc_wallet_private_key_here
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# ===== MEV PROTECTION =====

# Flashbots (https://docs.flashbots.net/)
FLASHBOTS_AUTH_KEY=your_flashbots_auth_key_here

# ===== ALERTS & NOTIFICATIONS =====

# Telegram Bot (https://core.telegram.org/bots#creating-a-new-bot)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook (https://discord.com/developers/docs/resources/webhook)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Slack Webhook (https://api.slack.com/messaging/webhooks)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# ===== DATABASE =====

# Database (if using full profile)
DATABASE_URL=postgresql://trader:secure_password@postgres:5432/trading_ai
REDIS_URL=redis://redis:6379/0

# TimescaleDB (for tick data)
TIMESCALE_URL=postgresql://trader:secure_password@timescale:5432/trading_ai_ticks

# ===== ENVIRONMENT =====

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ===== TRADING SETTINGS =====

PAPER_TRADING=true
TRADING_MODE=paper  # paper | live
MAX_POSITION_SIZE=0.1
RISK_TOLERANCE=moderate
MAX_LEVERAGE=3
MAX_DRAWDOWN_PCT=15
